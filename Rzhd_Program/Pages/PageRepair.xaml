<Page x:Class="Rzhd_Program.Pages.PageRepair"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rzhd_Program.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="920"
      Title="PageRepair">
    <Grid>
        <Label Content="Заполните поля" HorizontalAlignment="Left" Margin="144,90,0,0" VerticalAlignment="Top" Height="37" Width="156" FontSize="18" FontWeight="Bold"/>
        <Label Content="Выберите вагон" HorizontalAlignment="Left" Margin="75,132,0,0" VerticalAlignment="Top" Height="29" Width="294" FontSize="16"/>
        <ComboBox Name="comboWagon" HorizontalAlignment="Left" Margin="75,161,0,0" VerticalAlignment="Top"  Width="294" Height="50" SelectionChanged="comboWagon_SelectionChanged"/>
        <Label Content="Выберите вид ремонта" HorizontalAlignment="Left" Margin="75,216,0,0" VerticalAlignment="Top" Height="29" Width="294" FontSize="16"/>
        <ComboBox Name="comboVid" HorizontalAlignment="Left" Margin="75,245,0,0" VerticalAlignment="Top"  Width="294" Height="50"/>
        <Button Name="btnSave"  Content="Оставить заявку" HorizontalAlignment="Left" Margin="75,363,0,0" VerticalAlignment="Top" Height="32" Width="146" FontSize="16" Click="btnSave_Click"/>
        <Button Name="btnDelete"  Content="Удалить" HorizontalAlignment="Left" Margin="222,363,0,0" VerticalAlignment="Top" Height="32" Width="146" FontSize="16" Click="btnDelete_Click"/>
        <Button Name="btnClear" Content="Очистить поля" HorizontalAlignment="Left" Margin="75,400,0,0" VerticalAlignment="Top" Height="32" Width="294" FontSize="16" Click="btnClear_Click"/>
        <Label Content="Список заявок" HorizontalAlignment="Left" Margin="399,86,0,0" VerticalAlignment="Top" Height="37" Width="196" FontSize="18" FontWeight="Bold"/>
        <ListBox Name="lboxRepair" Margin="399,129,28,99" SelectionChanged="lboxRepair_SelectionChanged" FontSize="16"/>
    </Grid>
</Page>
